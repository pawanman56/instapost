<main class="wall">
    <article>
        <header>
            
            <div class="col-xs-4">
                <%= image_tag @user.photo, class: 'user_photo' %>
            </div>
            <div class="col-xs-8">
                <div class="col-xs-8 user">
                    <%= @user.name %>
                </div>
                <div class="col-xs-8">
                  <% unless current_user?(@user) %>
                    <div id="follow_form" >
                      <% if current_user.following?(@user) %>
                        <%= render 'unfollow' %>
                      <% else %>
                        <%= render 'follow' %>
                      <% end %>
                    </div>
                  <% end %>
                  <hr>
                </div>
                <div class="col-xs-8 stats">
                  <ul class="stats">
                    <li><strong><%= pluralize(@user.posts.count, 'post') %></strong></li>
                    <li><strong><%= pluralize(@user.followed_users.count, 'following') %></strong></li>
                    <li><strong><%= pluralize(@user.followers.count, 'follower') %></strong></li>
                  </ul>
                </div>
            </div>
            
        </header>
        
        <div class="container-fluid">
            <% @user.posts.each do |post| %>
              <div class="col-xs-4">
                <%= link_to image_tag(post.photo, class: 'photo'), post_path(post.id) %>
              </div>
            <% end %>
        </div>
    </article>
</main>