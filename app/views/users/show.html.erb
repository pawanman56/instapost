<main class="wall">
    <article>
        <header>
            
            <div class="col-xs-4">
                <%= image_tag @user.photo, class: 'user_photo' %>
            </div>
            <div class="col-xs-8">
                <div class="col-xs-8 user">
                    <%= @user.name %>
                </div>
                <div class="col-xs-8">
                    <input type="submit" value="Follow" class="follow_btn"><hr>
                </div>
                <div class="col-xs-8 posts">
                    <%= pluralize(@user.posts.count, 'post') %>
                </div>
            </div>
            
        </header>
        
        <div class="container-fluid">
            <% @user.posts.each do |post| %>
              <div class="col-xs-4">
                <%= link_to image_tag(post.photo, class: 'photo'), post_path(post.id) %>
              </div>
            <% end %>
        </div>
    </article>
</main>