<!DOCTYPE html>
<html>
<head>
  <title>Share Your Photos Online - Instapost</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
  <link href="https://fonts.googleapis.com/css?family=Satisfy" rel="stylesheet">
  <link rel="icon" type="image/ico" href="/favicon.ico">
</head>
<body>

<nav>
  <div class="container-fluid">
    
    <div class="navbar-header">
      
      <div class="col-xs-6">
        <span class="pull-left brand">
          <%= link_to 'Instapost', root_path %>
        </span>
      </div>
      
      <div class="col-xs-6">
        <% if user_signed_in? %>
          <span><%= link_to 'New Post', new_post_path %></span>
          <span>|</span>
          <span><%= link_to 'Edit Settings', edit_user_registration_path %> </span>
          <span>|</span>
          <span><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></span>
        <% else %>
          <span><%= link_to 'Sign Up', new_user_registration_path %></span>
          <span>|</span>
          <span><%= link_to 'Log In', new_user_session_path %></span>
        <% end %>
      </div>
        
    </div>
    
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
